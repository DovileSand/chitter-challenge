<p> Please sign up: </p>

<form action="/users" method="post">
  <label for="firstname">
    Your Name: <input type="text" name="firstname">
  </label>
  <label for="username">
    Username: <input name='username' type='text' value='<%= @user.username %>' required>
  </label>
  <label for="email">
    Email: <input name='email' type='text' value='<%= @user.email %>' required>
  </label>
  <label for="password">
    Password: <input type="text" name="password">
  </label>
  <label for="password_confirmation">
      Password Confirmation: <input type="text" name="password_confirmation">
  </label>
    <input type="submit" value="Sign Up">
</form>
